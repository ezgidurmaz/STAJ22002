@model IEnumerable<Cabo.Models.Order>

@{
    ViewData["Title"] = "Tüm Siparişler";
}

<h2>Tüm Siparişler</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı</th>
            <th>Tarih</th>
            <th>Toplam Tutar</th>
            <th>Ödeme Yöntemi</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.TotalAmount.ToString("C2", System.Globalization.CultureInfo.CreateSpecificCulture("tr-TR"))</td>
                <td>@order.PaymentMethod</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
