@model IEnumerable<Cabo.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Görsel</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 100px;">
                    <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 80px; max-height: 80px;" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Stock</td>
                <td>
                    <form asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@item.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Sepete Ekle</button>
                        <a class="btn btn-primary btn-sm" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
