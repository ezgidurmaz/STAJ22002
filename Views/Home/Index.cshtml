@model List<Cabo.Models.Product>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Slider / Carousel -->
<div id="homeCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active" aria-current="true"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/img/slider1.jpg" class="d-block w-100" alt="Slider 1" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Cabo'ya Hoşgeldiniz!</h5>
                <p>En kaliteli ürünler en özel indirimlerle sizlerle.</p>
                <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Ürünleri Gör</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/slider2.jpg" class="d-block w-100" alt="Slider 2" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Haftanın Fırsatı!</h5>
                <p>Seçili ürünlerde %30 indirim fırsatını kaçırmayın.</p>
                <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Hemen Satın Al</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/img/slider3.jpg" class="d-block w-100" alt="Slider 3" style="height: 500px; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Yeni Ürünler</h5>
                <p>En yeni ürünlerimizle tanışın!</p>
                <a class="btn btn-primary" asp-controller="Products" asp-action="Index">İncele</a>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>

<!-- Popüler Ürünler -->
<div class="container my-5">
    <h2 class="mb-4">Popüler Ürünler</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model.Take(6))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@String.Format("{0:C}", product.Price)</p>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary mt-auto">İncele</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Henüz popüler ürün bulunmamaktadır.</p>
        }
    </div>
</div>

<!-- Kampanya / İndirim Kutusu -->
<div class="bg-warning text-dark text-center py-5">
    <h2 class="fw-bold">Haftanın Fırsatı!</h2>
    <p class="lead">Seçili ürünlerde %30 indirim fırsatını kaçırmayın.</p>
    <a class="btn btn-dark btn-lg mt-3" asp-controller="Products" asp-action="Index">Hemen Satın Al</a>
</div>

<!-- Müşteri Yorumları -->
<div class="container my-5">
    <h2 class="mb-4">Müşteri Yorumları</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm p-3">
                <p>"Harika ürünler ve hızlı teslimat!"</p>
                <h6 class="text-muted">- Ayşe K.</h6>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm p-3">
                <p>"Kalitesi ve fiyatı çok iyi, kesinlikle tavsiye ederim."</p>
                <h6 class="text-muted">- Mehmet T.</h6>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm p-3">
                <p>"Müşteri hizmetleri çok yardımcı ve ilgiliydi."</p>
                <h6 class="text-muted">- Elif Y.</h6>
            </div>
        </div>
    </div>
</div>
