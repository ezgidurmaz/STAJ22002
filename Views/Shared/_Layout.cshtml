@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@inject UserManager<Cabo.Models.ApplicationUser> UserManager
@using Cabo.Models
@using System.Text.Json

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cabo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Cabo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <!-- Tüm kullanıcılar görebilir -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @{
                        int cartCount = 0;
                        var cartSession = Context.Session.GetString("Cart");
                        if (!string.IsNullOrEmpty(cartSession))
                        {
                            var cart = JsonSerializer.Deserialize<List<CartItemModel>>(cartSession);
                            cartCount = cart?.Sum(x => x.Quantity) ?? 0;
                        }
                    }

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">
                                Hoşgeldin, @(UserManager.GetUserAsync(User).Result?.FirstName ?? User.Identity.Name)
                            </span>
                        </li>

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">Ürünler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                    🛒 Sepet (@cartCount)
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="MyOrders">Siparişlerim</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AdminProducts" asp-action="Index">Admin Paneli</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="AllOrders">Tüm Siparişler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">Üyeler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AdminMessages" asp-action="Index">Mesajlar</a>
                            </li>
                        }

                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">Çıkış</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Kayıt</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                🛒 Sepet (@cartCount)
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @* Sepete ekleme veya sipariş sonrası mesaj *@
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        &copy; 2025 Cabo
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
