@model IEnumerable<Cabo.Models.Product>

@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Yeni Ürün Ekle</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Görsel</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 100px;">
                    <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 80px; max-height: 80px;" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?');">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
